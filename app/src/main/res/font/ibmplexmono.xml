<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        android:font="@font/ibmplexmono_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/ibmplexmono_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic -->
    <font
        android:font="@font/ibmplexmono_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/ibmplexmono_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- medium -->
    <font
        android:font="@font/ibmplexmono_medium"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/ibmplexmono_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />
</font-family>