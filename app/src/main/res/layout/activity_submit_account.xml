<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:lantern="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/accent_white"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:id="@+id/submitAccountView"
    tools:context=".SubmitAccountActivity">

    <fragment
        android:id="@+id/titlebar_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="org.lantern.app.fragment.TitleBar"
        lantern:titleBackgroundColor="@drawable/nav_background_white"
        lantern:titleText="@string/account_recovery"/>

    <TextView
        android:id="@+id/recoveryMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="@string/oops_having_trouble"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:drawableLeft="@drawable/email_active"
        android:drawablePadding="10dip"
        android:hint="@string/your_email"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/separator"
        android:background="@color/edittext_color"
        android:layout_below="@+id/emailInput"
        android:layout_width = "275dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/paymentMethod"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/ic_cc"
        android:drawablePadding="10dip"
        android:hint="@string/payment_method"
        android:descendantFocusability="beforeDescendants"
        android:cursorVisible="false"
        android:textIsSelectable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:paddingTop="15dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />


    <ListView android:id="@+id/list"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:elevation="2dp"
        android:background="@color/accent_white"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:drawSelectorOnTop="false"/>
    </RelativeLayout>

    <View
        android:id="@+id/paymentSeparator"
        android:background="@color/edittext_color"
        android:layout_below="@+id/paymentMethod"
        android:layout_width = "275dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/paymentAccount"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:layout_marginTop="25dp"
        android:clickable="true" 
        android:cursorVisible="true" 
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="10dip"
        android:hint="@string/payment_account"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/separator3"
        android:background="@color/edittext_color"
        android:layout_below="@+id/paymentAccount"
        android:layout_width = "275dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />                                      

    <LinearLayout android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/monthYear" 
        android:drawablePadding="2dip"
        android:layout_gravity="center"                    
        android:weightSum="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/purchaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="27dp"
            android:text="@string/purchase_date"
            android:textColor="@color/reportIssueHintText"
            android:textSize="12sp"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"                    
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date"/>

            <Spinner 
                android:id="@+id/expMonth" 
                style="@style/ExpMonth" 
                android:nextFocusForward="@+id/expYear"/>

            <Spinner 
                android:id="@+id/expYear" 
                android:layout_marginLeft="100dp"
                style="@style/ExpLatestYear" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/edittext_color"
        android:layout_below="@+id/monthYear"
        android:layout_width = "275dp"
        android:layout_gravity="center"                    
        android:layout_height="1.5dip"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />


    <EditText
        android:id="@+id/description"
        android:layout_marginTop="35dp"
        android:layout_width="310dp"
        android:layout_height="96dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/report_issue"
        android:inputType="textMultiLine"
        android:textColorHint="@color/reportIssueHintText"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:drawablePadding="10dip"
        android:hint="@string/locate_account"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:autoText="false"
        android:padding="10dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/submit"
        android:layout_height="36dp"
        android:layout_width="216dp"
        android:layout_marginTop="20dp"
        android:text="@string/submit"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:elevation="2dp"
        android:minHeight="48dp"
        android:textColor="@color/accent_white"
        android:clickable="true"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/send_btn"
        android:onClick="submitClicked" />

</LinearLayout>
