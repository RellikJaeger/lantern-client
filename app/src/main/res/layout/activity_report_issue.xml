<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lantern="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_white"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:id="@+id/reportIssueView"
    tools:context="org.getlantern.mobilesdk.activity.ReportIssueActivity">

    <fragment
        android:id="@+id/titlebar_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="org.getlantern.lantern.fragment.TitleBar"
        lantern:titleBackgroundColor="@drawable/nav_background_white"
        lantern:titleText="@string/report_an_issue"/>

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/email_active"
        android:drawablePadding="10dip"
        android:hint="@string/your_email"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/separator"
        android:background="@color/edittext_color"
        android:layout_below="@+id/emailInput"
        android:layout_width = "310dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />


    <EditText
        android:id="@+id/issue"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="false"
        android:drawableLeft="@drawable/issue"
        android:drawableRight="@drawable/dropdown"
        android:drawablePadding="10dip"
        android:hint="@string/select_issue"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/issueSeparator"
        android:background="@color/edittext_color"
        android:layout_below="@+id/issue"
        android:layout_width = "310dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

     <EditText
        android:id="@+id/description"
        android:layout_marginTop="43.5dp"
        android:layout_width="310dp"
        android:layout_height="302dp"
        android:background="@drawable/report_issue"
        android:textColorHint="@color/reportIssueHintText"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:drawablePadding="10dip"
        android:hint="@string/select_issue_desc"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:autoText="false"
        android:padding="10dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <ListView android:id="@+id/list"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/accent_white"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:drawSelectorOnTop="false"/>

    </RelativeLayout>

    <Button
        android:id="@+id/sendBtn"
        android:layout_height="36dp"
        android:layout_width="216dp"
        android:layout_marginTop="20dp"
        android:text="@string/submit_issue"
        android:textAppearance="@style/MediumText"
        android:textSize="14sp"
        android:elevation="2dp"
        android:minHeight="48dp"
        android:textColor="@color/accent_white"
        android:clickable="true"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/send_btn"
        android:onClick="sendReport" />

</LinearLayout>
