<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@color/accent_white"
    android:id="@+id/plansView">

    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:src="@drawable/close_off" />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- The main content view -->
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardsView"
            android:layout_gravity="center">

            <org.getlantern.lantern.model.DynamicViewPager
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="309dp"
                />

            <com.ogaclejapan.smarttablayout.SmartTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/viewPagerTab"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                app:stl_customTabTextLayoutId="@layout/custom_tab_circle"
                app:stl_dividerColor="@color/transparent"
                app:stl_dividerThickness="36dp"
                app:stl_indicatorAlwaysInCenter="true"
                app:stl_indicatorColor="@color/icon_enabled"
                app:stl_indicatorCornerRadius="12dp"
                app:stl_indicatorGravity="center"
                app:stl_indicatorInterpolation="linear"
                app:stl_indicatorThickness="12dp"
                app:stl_underlineColor="@color/transparent"
                app:stl_underlineThickness="0dp"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAppearance="@style/MediumText"
                android:textStyle="normal"
                android:textColor="#7c7c7c"
                android:lineSpacingExtra="5sp"
                android:text="@string/one_year_yinbi"/>

            <TextView
                android:id="@+id/oneYearCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAppearance="@style/MediumText"
                android:paddingLeft="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:lineSpacingExtra="5sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/oneYearBtn"
            android:layout_height="36dp"
            android:layout_width="216dp"
            android:text="@string/purchase"
            android:stateListAnimator="@null"
            android:textAppearance="@style/MediumText"
            android:textSize="14sp"
            android:minHeight="48dp"
            android:textAllCaps="true"
            android:textColor="@color/pink"
            android:clickable = "true"
            android:background="@drawable/text_invite"
            android:layout_centerInParent="true"
            android:onClick="textInvite" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAppearance="@style/MediumText"
                android:textStyle="normal"
                android:textColor="#7c7c7c"
                android:lineSpacingExtra="5sp"
                android:text="@string/two_years_yinbi"
                />

            <TextView
                android:id="@+id/twoYearCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAppearance="@style/MediumText"
                android:paddingLeft="5dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:lineSpacingExtra="5sp"
                />

        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/twoYearBtn"
                android:layout_height="36dp"
                android:layout_width="216dp"
                android:text="@string/purchase"
                android:textAppearance="@style/MediumText"
                android:textSize="14sp"
                android:elevation="2dp"
                android:minHeight="48dp"
                android:textAllCaps="true"
                android:stateListAnimator="@null"
                android:textColor="@color/accent_white"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@color/pink"
                android:layout_centerInParent="true"
                android:onClick="emailInvite" />

            <ImageView
                android:id="@+id/ribbon"
                android:layout_toRightOf="@+id/twoYearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/best_deal"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/resellerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/reseller_bg">

            <TextView
                android:id="@+id/resellerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:clickable="true"
                android:text="@string/get_bulk_yinbi"
                android:textSize="12sp"
                android:textColor="@color/reseller_text"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
