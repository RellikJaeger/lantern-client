<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lantern="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_white"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:id="@+id/referralView"
    tools:context=".ReferralActivity">

    <fragment
        android:id="@+id/titlebar_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="org.getlantern.lantern.fragment.TitleBar"
        lantern:titleBackgroundColor="@drawable/nav_background_white"
        lantern:titleText="@string/referral_code"/>

    <fragment
        android:id="@+id/user_form_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="org.getlantern.lantern.fragment.UserForm"
        lantern:formType="referral"
        lantern:formIcon="@drawable/star"
        lantern:sendBtnText="@string/apply_referral_code"
        lantern:formList="@array/referral_promotion_list"/>

</LinearLayout>
