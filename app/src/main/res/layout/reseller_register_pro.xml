<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:lantern="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/accent_white"
    android:id="@+id/confirmEmailView"
    tools:context=".AuthDeviceActivity">

    <fragment
        android:id="@+id/titlebar_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="org.getlantern.lantern.fragment.TitleBar"
        lantern:titleBackgroundColor="@drawable/nav_background_white"
        lantern:titleText="@string/register_pro_account"/>

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:imeOptions="actionDone"
        android:drawableLeft="@drawable/email_active"
        android:drawablePadding="10dip"
        android:hint="@string/your_email_address"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/separator"
        android:background="@color/edittext_color"
        android:layout_below="@+id/emailInput"
        android:layout_width = "275dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        /> 

    <EditText
        android:id="@+id/confirmEmailInput"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:imeOptions="actionDone"
        android:drawableLeft="@drawable/email_active"
        android:drawablePadding="10dip"
        android:hint="@string/confirm_email_address"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/separator2"
        android:background="@color/edittext_color"
        android:layout_below="@+id/confirmEmailInput"
        android:layout_width = "275dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        />                            

    <TextView
        android:id="@+id/enterMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/please_enter_register"
        android:textSize="14sp"
        android:padding="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/resellerCodeInput"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="10dip"
        android:inputType="textCapCharacters"
        android:hint="XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789-"
        android:maxLength="29"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:autoText="false"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <View
        android:background="@color/edittext_color"
        android:layout_below="@+id/referralCodeInput"
        android:layout_width = "275dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="1.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        /> 

    <TextView
        android:id="@+id/activationCodeMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:text="@string/enter_pro_activation_code"
        android:padding="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"/>           
    <Button
        android:id="@+id/continueBtn"
        android:layout_height="36dp"
        android:layout_width="216dp"
        android:layout_marginTop="36dp"
        android:text="@string/continue_"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:elevation="2dp"
        android:minHeight="48dp"
        android:textColor="@color/accent_white"
        android:clickable="true"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/send_btn"
        android:onClick="continueClicked" />


</LinearLayout>  
