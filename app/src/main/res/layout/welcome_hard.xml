<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/close"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:src="@drawable/close_off" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcome_to_lantern"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="23dp"
        android:textAppearance="@style/MediumText"
        android:textSize="15sp"
        android:gravity="center"
        android:alpha="0.5"
        android:textColor="@color/black"
        android:text="@string/welcome_greeting"/>

    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="21dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/welcome_logo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/upgrade_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upgrade_for"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/proFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="11dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lanternPro"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MediumText"
            android:paddingTop="11dp"
            android:layout_centerHorizontal="true"
            android:text="@string/lantern_pro_header"
            android:textSize="24sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/plansView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/two_year_plan"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/two_year_bg">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/best_value"
                android:layout_height="40dp"
                android:layout_width="104dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/BlackText"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:text="@string/best_value"
                android:background="@android:color/transparent"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/twoYearCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:textAppearance="@style/MediumText"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="28sp"
                android:alpha=".87"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twoYearCost"
                android:paddingLeft="16dp"
                android:text="@string/two_years"
                android:textSize="12sp"
                android:alpha=".54"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/twoYearBtn"
                android:layout_height="33dp"
                android:layout_width="88dp"
                android:text="@string/select"
                android:textAppearance="@style/MediumText"
                android:textSize="14sp"
                android:elevation="2dp"
                android:minHeight="40dp"
                android:textAllCaps="true"
                android:textColor="@color/accent_white"
                android:textStyle="bold"
                android:clickable = "true"
                android:background="@color/buy_pro"
                android:layout_marginRight="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical ="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/one_year_plan"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:background="@drawable/two_year_bg">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/oneYearCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MediumText"
                android:paddingLeft="16dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="28sp"
                android:alpha=".87"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oneYearCost"
                android:paddingLeft="16dp"
                android:textSize="12sp"
                android:text="@string/one_year"
                android:alpha=".54"
                android:textColor="@color/black"/>


            <Button
                android:id="@+id/oneYearBtn"
                android:layout_height="33dp"
                android:layout_width="88dp"
                android:text="@string/select"
                android:textAppearance="@style/MediumText"
                android:textSize="14sp"
                android:elevation="2dp"
                android:minHeight="40dp"
                android:textAllCaps="true"
                android:textColor="@color/buy_pro"
                android:textStyle="bold"
                android:clickable = "true"
                android:background="@drawable/buy_btn"
                android:layout_marginRight="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical ="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
