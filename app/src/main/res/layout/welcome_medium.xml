<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@color/accent_white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="59dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/welcome_logo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/upgrade_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upgrade_for"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#000000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lantern_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MediumText"
        android:paddingTop="31dp"
        android:text="@string/lantern_pro_header"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:gravity="left|center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/proFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:paddingTop="11dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/upgradeNow"
        android:layout_height="36dp"
        android:layout_width="216dp"
        android:layout_marginTop="20dp"
        android:text="@string/upgrade_now"
        android:textAppearance="@style/MediumText"
        android:textSize="14sp"
        android:elevation="2dp"
        android:minHeight="48dp"
        android:textColor="@color/accent_white"
        android:clickable="true"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/pink"
        android:onClick="upgradeNow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/continueBasic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textAppearance="@style/ThinText"
        android:textSize="12sp"
        android:gravity="center"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="@color/continue_welcome_btn"
        android:text="@string/continue_to_basic"/>

</LinearLayout>
